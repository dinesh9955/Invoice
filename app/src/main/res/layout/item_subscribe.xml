<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:id="@+id/relative_root"
    android:layout_marginTop="5dp"
   >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_toLeftOf="@+id/imageView">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Customizeyourexperience"
            android:id="@+id/text_setting"
            android:textColor="@color/fragmentfont"
            android:textSize="16sp"
            android:textStyle="normal"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Itâ€™s about time someone provides the modern answer to this question. In 2012 when the question was asked, the answers also posted back then were good answers."
            android:id="@+id/text_setting2"
            android:layout_below="@+id/text_setting"
            android:textColor="@color/fragmentfont"
            android:textSize="16sp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:textStyle="bold"
            />
    </RelativeLayout>





    <ImageView
        android:id="@+id/imageView"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/checked_green"
      />

</RelativeLayout>