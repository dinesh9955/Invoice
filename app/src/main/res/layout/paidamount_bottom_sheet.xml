<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/createbottomsheet_curve"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/invoice_PaidAmount"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textColor="@color/dark_blue"
        android:id="@+id/txtpaid"
        android:textSize="@dimen/_11sdp"
        />

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/service_EnterAmount"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="20dp"
    android:textColor="@color/dark_blue"
    android:layout_below="@id/txtpaid"
    android:id="@+id/txtamount"
        android:textSize="@dimen/_10sdp"
    />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:layout_below="@id/txtamount"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:hint="@string/service_Amount"
        android:inputType="numberDecimal"
        android:textColorHint="@color/dark_grey"
        android:textSize="@dimen/_10sdp"
        android:paddingTop="0dp"
        android:paddingLeft="10dp"
        android:id="@+id/edamount"
        android:background="@drawable/edittextshape"
        android:elevation="2dp"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/service_EnterDate"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/dark_blue"
        android:layout_below="@id/edamount"
        android:id="@+id/txtdate"
        android:textSize="@dimen/_10sdp"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:layout_below="@id/txtdate"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:hint="@string/Date"
        android:layout_alignParentLeft="true"
        android:padding="10dp"
        android:textColorHint="@color/dark_grey"
        android:textSize="@dimen/_10sdp"
        android:paddingTop="0dp"
        android:paddingLeft="10dp"
        android:id="@+id/eddate"
        android:background="@drawable/edittextshape"
        android:elevation="2dp"
        android:gravity="center_vertical"
        />

    <com.isapanah.awesomespinner.AwesomeSpinner
        android:id="@+id/selectpaymentmode"
        android:layout_below="@id/eddate"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        app:spinnerDirection="ltr"
        app:spinnerHint="@string/service_SelectPaymentMode"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/edittextshape"
        android:textSize="@dimen/_10sdp"
        />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/selectpaymentmode"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/buttonshape"
        android:text="@string/done"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:id="@+id/btndone2"
        android:layout_marginBottom="200dp"
        android:textSize="@dimen/_10sdp"
        />


</RelativeLayout>