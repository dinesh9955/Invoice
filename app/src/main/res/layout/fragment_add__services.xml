<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.sir.com.sir.Service.Add_Services"
    android:background="@color/white">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <EditText
                android:layout_marginTop="?actionBarSize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imagedescription"
                android:hint="@string/item_Item_Name"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textSize="12dp"
                android:padding="15dp"
                android:background="@drawable/edittextshape"
                android:elevation="2dp"
                android:id="@+id/servicename"
                android:textColorHint="@color/dark_grey"/>

            <EditText
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/servicename"
                android:hint="@string/item_Item_Rate"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textSize="12dp"
                android:padding="15dp"
                android:background="@drawable/edittextshape"
                android:elevation="2dp"
                android:id="@+id/servicerate"
                android:inputType="numberDecimal"
                android:textColorHint="@color/dark_grey"
                />

            <com.isapanah.awesomespinner.AwesomeSpinner
                android:id="@+id/selectcategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                app:spinnerDirection="ltr"
                app:spinnerHint="@string/item_Select_Category"
                android:layout_below="@+id/servicerate"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                />

            <EditText
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/selectcategory"
                android:hint="@string/item_Other_Category_if_not_listed"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textSize="12dp"
                android:padding="15dp"
                android:background="@drawable/edittextshape"
                android:elevation="2dp"
                android:id="@+id/othercategory"
                android:textColorHint="@color/dark_grey"
                />
            <com.isapanah.awesomespinner.AwesomeSpinner
                android:id="@+id/measurementunit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                app:spinnerDirection="ltr"
                app:spinnerHint="@string/item_Measurement_Unit"
                android:layout_below="@+id/othercategory"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/edittextshape"
                android:textColorHint="@color/dark_grey"
                />


            <EditText
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/measurementunit"
                android:hint="@string/item_Other_Measurement_unit"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textSize="12dp"
                android:padding="15dp"
                android:background="@drawable/edittextshape"
                android:elevation="2dp"
                android:visibility="gone"
                android:id="@+id/mesurementunitedittxt"
                android:textColorHint="@color/dark_grey"
                />

            <EditText
                android:alpha="0"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mesurementunitedittxt"
                android:hint="@string/item_Weight"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textSize="12dp"
                android:padding="15dp"
                android:background="@drawable/edittextshape"
                android:elevation="2dp"
                android:id="@+id/weight"
                android:inputType="number"
                android:visibility="gone"
                android:textColorHint="@color/dark_grey"
                />


            <EditText
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_below="@+id/weight"
                android:hint="@string/item_Item_Description"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textSize="12dp"
                android:padding="15dp"
                android:background="@drawable/edittextshape"
                android:elevation="2dp"
                android:id="@+id/servicedescription"
                android:gravity="start"
                android:maxHeight="150dp"
                android:textColorHint="@color/dark_grey"
                />


            <com.isapanah.awesomespinner.AwesomeSpinner
                android:id="@+id/selectcompany"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:spinnerDirection="ltr"
                app:spinnerHint="@string/item_Select_Company"
                android:layout_below="@+id/servicedescription"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/edittextshape"
                />



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/taxable"
                android:layout_below="@+id/selectcompany"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="30dp"
                android:text="@string/item_TAXABLE"
                android:textColor="@color/lightpurple"
                />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:id="@+id/radiogroup"
                android:orientation="horizontal"
                android:layout_below="@id/taxable">
                <RadioButton
                    android:id="@+id/ryes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/dark_grey"
                    android:buttonTint="@color/lightpurple"
                    android:text="@string/yes" />
                <RadioButton
                    android:textColor="@color/dark_grey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/no"
                    android:buttonTint="@color/lightpurple"
                    android:layout_marginLeft="80dp"
                    android:id="@+id/rno"
                    />
            </RadioGroup>


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="@string/item_Add_Item"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:layout_below="@+id/radiogroup"
                android:layout_marginTop="30dp"
                android:id="@+id/addservice"
                android:background="@drawable/buttonshape"
                android:layout_marginBottom="90dp"
                />


        </RelativeLayout>
    </ScrollView>
    <ImageView
        android:visibility="gone"
        android:id="@+id/avibackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#66000000"/>
    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/avi"
        android:layout_centerInParent="true"
        android:layout_width="100dp"
        android:layout_height="100dp"
        style="@style/AVLoadingIndicatorView"
        android:visibility="gone"
        app:indicatorName="BallClipRotatePulseIndicator"

        />

</RelativeLayout>
