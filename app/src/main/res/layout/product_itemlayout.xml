<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/r"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"

        android:background="@drawable/createdialog_curve"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:text="Enter Price and Quantity"
            android:textSize="22sp"
            android:textColor="@color/black"
            android:id="@+id/txtprice"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/txtprice"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:hint="Enter Price"
            android:textColorHint="@color/d_grey"
            android:textSize="14dp"
            android:paddingTop="0dp"
            android:paddingLeft="10dp"
            android:id="@+id/edprice"
            android:background="@drawable/edittextshape"
            android:elevation="2dp"
            android:text="10"
            android:inputType="numberDecimal"
            />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/edprice"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:hint="Enter Quantity"
            android:textColorHint="@color/d_grey"
            android:textSize="14dp"
            android:paddingTop="0dp"
            android:inputType="numberDecimal"
            android:paddingStart="10dp"
            android:digits="0123456789."
            android:id="@+id/edquantity"
            android:background="@drawable/edittextshape"
            android:elevation="2dp"
            />


        <Button
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/edquantity"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/btncancel"
            android:background="@drawable/buttonshape"
            android:text="OK"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:id="@+id/btnok"
            />

        <Button
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/edquantity"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/cancelbuttonshape"
            android:text="Cancel"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:id="@+id/btncancel"
            android:layout_marginBottom="40dp"
            />
    </RelativeLayout>

</RelativeLayout>