        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtonboardheading3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="Lorem ipsum dolar sit amit,Consectuer\nsadipscing elitr,sed diam nonumy eirmod"
        android:textSize="12dp"
        android:id="@+id/txtonboardingdes3"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_below="@id/txtonboardingdes3"
        android:src="@drawable/welcome_03"
        android:layout_centerInParent="true"
        android:id="@+id/imgonboard3"
