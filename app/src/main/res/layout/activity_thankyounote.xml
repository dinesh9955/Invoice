<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sirapp.Customer.Customer_Activity"
    android:background="@color/white">

    <!--<include layout="@layout/toolbar">
    </include>-->


    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
        <include layout="@layout/toolbar" />

    </com.google.android.material.appbar.AppBarLayout>

    <com.isapanah.awesomespinner.AwesomeSpinner
        android:id="@+id/selectcompany"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/edittextshape"
        android:layout_below="@+id/appbar"
        app:spinnerHint="@string/thank_SelectCompany" />



    <EditText
        android:id="@+id/search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/search_shape"
        android:drawableRight="@drawable/search_icon"
        android:layout_below="@+id/selectcompany"
        android:elevation="3dp"
        android:hint="@string/thank_Search_by_Invoice_number"
        android:maxLines="1"
        android:padding="10dp"
        android:textColorHint="@color/dark_grey"
        />



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_invoices"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/search">

    </androidx.recyclerview.widget.RecyclerView>


    <TextView
        android:layout_marginTop="100dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/thank_No_Paid_invoices"
        android:textSize="14dp"
        android:textColor="@color/darkgray"
        android:id="@+id/txtinvoice"
        android:visibility="gone"
        />

    <ImageView
        android:id="@+id/avibackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#66000000"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>


    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/avi"
        style="@style/AVLoadingIndicatorView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:indicatorName="BallClipRotatePulseIndicator"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>