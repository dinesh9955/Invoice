<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:text="Pay &amp; Track Taxes"
        android:textColor="@color/dark_blue"
        android:textSize="@dimen/_20sdp"
        android:id="@+id/txtonboardheading4"
        android:gravity="center_horizontal"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        />

    <TextView
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtonboardheading4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="Lorem ipsum dolar sit amit,Consectuer\nsadipscing elitr,sed diam nonumy eirmod"
        android:textSize="12dp"
        android:id="@+id/txtonboardingdes4"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_below="@id/txtonboardingdes4"
        android:src="@drawable/welcome_04"
        android:layout_centerInParent="true"
        android:id="@+id/imgonboard4"
        />


</RelativeLayout>
