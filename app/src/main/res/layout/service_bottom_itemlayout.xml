<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/_10sdp"
    android:paddingRight="@dimen/_10sdp"
    android:layout_marginBottom="@dimen/_10sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.makeramen.roundedimageview.RoundedImageView
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:src="@drawable/sir_app_logo"
        app:riv_corner_radius="100dp"
        android:id="@+id/image"
        android:scaleType="centerCrop"
        android:layout_marginTop="5dp"
        />

    <TextView
        android:id="@+id/servicename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/servicecurrency"
        android:layout_toRightOf="@+id/image"
        android:text="Company Name"
        android:textSize="@dimen/_11sdp"
        android:textStyle="bold"

        />
    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Quantity Available:20"
    android:id="@+id/servicedescription"
    android:layout_toRightOf="@+id/image"
    android:layout_marginLeft="20dp"
    android:layout_below="@+id/servicename"
    android:textColor="@color/gray"
        android:textSize="@dimen/_11sdp"
        android:visibility="gone"
    android:layout_marginTop="5dp"
    android:layout_toLeftOf="@+id/servicecurrency"
    android:layout_marginRight="5dp"

    />

    <TextView
        android:id="@+id/serviceunit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/servicedescription"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/servicecurrencyunit"
        android:layout_toRightOf="@+id/image"
        android:text="Unit:Day"
        android:textColor="@color/gray"
        android:textSize="@dimen/_9sdp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Unit:Day"
        android:id="@+id/serviceunit2"
        android:layout_toRightOf="@+id/image"
        android:layout_below="@+id/serviceunit"
        android:textColor="@color/gray"
        android:textSize="@dimen/_9sdp"
        android:layout_marginTop="5dp"
        android:layout_toLeftOf="@+id/productcurrency"
        android:layout_marginRight="5dp"
        android:visibility="gone"
        />


    <TextView
        android:id="@+id/servicecurrency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:text="120.00"
        android:textColor="@color/lightpurple"
        android:textSize="@dimen/_11sdp"
        android:textStyle="bold"

        />

    <TextView
        android:id="@+id/servicecurrencyunit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/servicecurrency"
        android:layout_alignParentEnd="true"
        android:padding="3dp"
        android:text="Qatari Rial"
        android:textColor="@color/lightpurple"
        android:textSize="@dimen/_8sdp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"
        android:layout_below="@+id/serviceunit"
        android:layout_marginTop="30dp">

    </View>


</RelativeLayout>