<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/_10sdp"
    android:paddingRight="@dimen/_10sdp"
    android:layout_marginBottom="@dimen/_10sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.makeramen.roundedimageview.RoundedImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/sir_app_logo"
        app:riv_corner_radius="100dp"
        android:id="@+id/image"
        android:scaleType="centerCrop"
        android:layout_marginTop="@dimen/_5sdp"/>

    <TextView
        android:id="@+id/productname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/productcurrency"
        android:layout_toRightOf="@+id/image"
        android:text="Company Name"
        android:textSize="@dimen/_11sdp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/productquantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/productname"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/productcurrency"
        android:layout_toRightOf="@+id/image"
        android:text="Quantity Available:20"
        android:textColor="@color/gray"
        android:textSize="@dimen/_9sdp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:id="@+id/description"
        android:layout_toRightOf="@+id/image"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/productquantity"
        android:textColor="@color/gray"
        android:textSize="@dimen/_9sdp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="120.00"
        android:textStyle="bold"
        android:id="@+id/productcurrency"
        android:layout_alignParentEnd="true"
        android:textColor="@color/lightpurple"
        android:textSize="@dimen/_11sdp"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/productcurrency"
        android:text="Qatari Rial"
        android:id="@+id/productcurrencyunit"
        android:layout_alignParentEnd="true"
        android:textColor="@color/lightpurple"
        android:textSize="@dimen/_8sdp"
        android:padding="3dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"
        android:layout_below="@+id/description"
        android:layout_marginTop="10dp">

    </View>





</RelativeLayout>